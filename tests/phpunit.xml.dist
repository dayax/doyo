<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         bootstrap="autoload.php.dist"
>
    <testsuites>
        <testsuite name="doyo wordpress theme test">
            <directory>./doyo</directory>
        </testsuite>
    </testsuites>

    <filter>
        <blacklist>            
            <exclude>
                <directory>./fixtures/wordpress</directory>
                <directory>./doyo</directory>
                <directory>../vendor</directory>
            </exclude>
        </blacklist>        
        <whitelist addUncoveredFilesFromWhitelist="true">
            <directory>./fixtures/wordpress/wp-content/themes/doyo</directory>
        </whitelist>
    </filter>
</phpunit>
